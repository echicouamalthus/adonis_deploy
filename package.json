{
	"name": "first-deploy-adonis",
	"version": "0.0.2",
	"private": true,
	"licence": "MIT",
	"pnpm": {
		"overrides": {
			"react": "19.1.0",
			"react-dom": "19.1.0",
			"@types/react": "~19.1.0"
		}
	},
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"docker:prod": "docker compose -f docker-compose.yaml -f docker-compose.prod.yaml up -d",
		"prepare": "husky",
		"precommit": "node scripts/precommit.mjs",
		"prepush": "node scripts/prepush.mjs",
		"typecheck": "turbo typecheck"
	},
	"devDependencies": {
		"@workspace/eslint-config": "workspace:*",
		"@workspace/typescript-config": "workspace:*",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.6.2",
		"turbo": "^2.5.8",
		"typescript": "~5.9.3"
	},
	"packageManager": "pnpm@10.18.0",
	"engines": {
		"node": ">=20"
	},
	"lint-staged": {
		"apps/web/**/*.{ts,tsx}": [
			"eslint --fix  --config apps/web/eslint.config.js",
			"prettier --write"
		],
		"apps/mobile/**/*.{ts,tsx}": [
			"eslint --fix  --config apps/mobile/eslint.config.js",
			"prettier --write"
		],
		"packages/**/*.{ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
