# ============================================
# RAILWAY PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy these variables to Railway's environment variables panel
# Use Railway's variable reference syntax for database: ${{Postgres.VARIABLE}}

# === APPLICATION ===
NODE_ENV=production
TZ=UTC
PORT=3333
HOST=0.0.0.0
LOG_LEVEL=info
SESSION_DRIVER=cookie
DRIVE_DISK=fs
LIMITER_STORE=database

# Generate with: cd apps/web && node ace generate:key
APP_KEY=

# === DATABASE (Railway References) ===
# In Railway UI, use "Add Reference" to link these variables
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_USER=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}
DB_DATABASE=${{Postgres.PGDATABASE}}

# === EMAIL ===
EMAIL_FROM=noreply@yourdomain.com
RESEND_API_KEY=

# === FRONTEND ===
# Replace with your Railway public domain
VITE_API_URL=https://your-app.railway.app

# === GOOGLE OAUTH (optional) ===
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=